<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Black" />
    
    <style name="centered">
        <item name="android:layout_gravity">center</item>
    </style>
    
    <style name="centered.horizontal" parent="@style/centered">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="centered.vertical" parent="@style/centered">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>
    
    <style name="categoryButton" parent="@style/centered.vertical">
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">16dip</item>
    </style>
    
    <style name="categoryImgButton" parent="@style/centered.horizontal">>
        <item name="android:src">@drawable/icon</item>
        <item name="android:layout_weight">1</item>
        <item name="android:onClick">onCategoryButtonClick</item>
    </style>
    
    <style name="categoryLabel" parent="@style/centered.horizontal">
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">16dip</item>
        <item name="android:textColor">#aaf</item>
        <item name="android:gravity">center|left</item>
        <item name="android:paddingLeft">20px</item>
    </style>
    
    <style name="categorySpacer" parent="@style/centered.vertical">
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="categoriesSpacer" parent="@style/centered.horizontal">
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="categoriesContainer" parent="@style/centered.horizontal">
        <item name="android:layout_weight">6</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="categoryContainer" parent="@style/centered.vertical">
        <item name="android:layout_weight">2</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="movieDetailsTitle" parent="@style/centered.vertical">
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">12dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#aef</item>
        <item name="android:gravity">center|left</item>
        <item name="android:paddingLeft">20px</item>
    </style>
    
    <style name="movieDetailsAuthor" parent="@style/centered.vertical">
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">9dip</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#eee</item>
        <item name="android:gravity">center|left</item>
        <item name="android:paddingLeft">20px</item>
    </style>

</resources>